    <form enctype="application/x-www-form-urlencoded" action="/results" method="post" id="FormShirt">
        <label for="">Sex</label>
        <select name="sex" id="sex">
            <option value="Male" <% if(shirt) { %>
                <% if(shirt.sex === 'Male') { %> selected <% }} %>>Male</option>
            <option value="Female" <% if(shirt) { %>
                <% if(shirt.sex === 'Female') { %> selected <% }} %>>Female</option>
        </select>
        <label for="">Size</label>
        <select name="size" id="size">
            <option value="S" <% if(shirt) { %>
                <% if(shirt.size === 'S') { %> selected <% }} %>>S</option>
            <option value="M" <% if(shirt) { %>
                <% if(shirt.size === 'M') { %> selected <% }} %>>M</option>
            <option value="L" <% if(shirt) { %>
                <% if(shirt.size === 'L') { %> selected <% }} %>>L</option>
            <option value="XL" <% if(shirt) { %>
                <% if(shirt.size === 'XL') { %> selected <% }} %>>XL</option>
            <option value="XXL"<% if(shirt) { %>
                <% if(shirt.size === 'XXL') { %> selected <% }} %>>XXL</option>
        </select>
        <label for="">Color</label>
        <select name="color" id="color">
            <option value="red" <% if(shirt) { %>
                <% if(shirt.color === 'red') { %> selected <% }} %>>Red</option>
            <option value="blue" <% if(shirt) { %>
                <% if(shirt.color === 'blue') { %> selected <% }} %>>Blue</option>
            <option value="black" <% if(shirt) { %>
                <% if(shirt.color === 'black') { %> selected <% }} %>>Black</option>
            <option value="white" <% if(shirt) { %>
                <% if(shirt.color === 'white') { %> selected <% }} %>>White</option>
        </select>
        <label for="">Text</label>
        <input type="text" name="text" maxlength="15" <% if (shirt) { %>
            <% if (shirt.text) { %> value='<%= shirt.text %>' <% }} %>>
        <input type="hidden" name="id" id="hiddenId" value="<%= id %>">
        <button type="submit">Generate T-Shirt</button>
    </form>
